<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>yoonique[.]net Forever Sessions</name>
	<author>yoonique[.]net</author>
	<creationDate>December 2010</creationDate>
	<authorUrl>http://www.yoonique.net</authorUrl>
	<license>http://www.gnu.org/licenses/gpl.html GNU/GPL</license>
	<version>2.0.15</version>
	<description>PLG_FOREVERSESSIONS_DESCRIPTION</description>
	 <files>
		<filename plugin="foreversessions">foreversessions.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_foreversessions.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_foreversessions.sys.ini</language>
	</languages>
	<config>
	<fields name="params">
		<fieldset name="main" label="Forever Sessions Settings">
		<field name="usergroups" type="usergroup" multiple="true" size="12" label="PLG_FOREVERSESSIONS_USERGROUPS_LABEL" description="PLG_FOREVERSESSIONS_USERGROUPS_DESCR" />
				<field name="inherit" type="radio" default="0" label="PLG_FOREVERSESSIONS_INHERIT_LABEL" description="PLG_FOREVERSESSIONS_INHERIT_DESCR">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
		</fieldset>
	</fields>
	</config>
</extension>
