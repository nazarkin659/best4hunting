<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" client="site" method="upgrade">
<name>IceVMCategories</name>
    <creationDate>March 2012</creationDate>
    <author>IceTheme</author>
    <authorEmail>support@icetheme.com</authorEmail>
    <authorUrl>http://www.icetheme.com</authorUrl>
    <copyright>(C) 2008 - 2012 IceTheme. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see	LICENSE.txt</license>
    <version>2.5.0</version>
    <description>
		<![CDATA[
	 <a target="_blank" href="icetheme.com"><b>IceVmCategory Module</b></a> </br><br>Enhanced Virtuemart Categories module with CSS based dropdown and the abilitty to load thumbs from the category images.<br><br>
	 <ul><li><a href="http://www.icetheme.com/joomla-extensions/icevmcategories.html">IceVmCategory Page</a></li><li><a target="_blank" href="http://icetheme.com/Forums">Discussion</a></li></ul></li></ul> <style>.lof-group{ padding:2px;color:#666;background:#CCC;cursor:hand; font-weight:bold; cursor:pointer}</style>
	]]>
	</description>
	<files>
		<filename module="mod_ice_vm_categories">mod_ice_vm_categories.php</filename>
        <folder module="mod_ice_vm_categories">libs</folder>
        <folder module="mod_ice_vm_categories">assets</folder>
		<filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>mod_ice_vm_categories.xml</filename>
        <filename>index.html</filename>
		<filename>CHANGELOG.php</filename>
		<filename>LICENSE.php</filename>
	</files>
    <languages>
        <language tag="en-GB">languages/en-GB.mod_ice_vm_categories.ini</language>
    </languages>     
    <config>
        <fields name="params">
            <fieldset name="basic">  
                <field name="show_image" type="radio" default="1" label="SHOW_IMAGE" description="SHOW_IMAGE_DESC">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
				<field name="image_width" type="text" default="20" label="IMAGE_MAIN_WIDTH" description="IMAGE_MAIN_WIDTH_DESC" size="5" />
				<field name="image_heigth" type="text" default="20" label="IMAGE_MAIN_HEIGHT" description="IMAGE_MAIN_HEIGHT_DESC" size="5" />
				
				<field name="" type="spacer" default="" label="" description="" />
				<field name="" type="spacer" default="" label="" description="" />
					
					
                <field name="sort" type="list" default="id" label="SORT" description="SORT_DESC">
                    <option value="id">ID</option>
                    <option value="name">NAME</option>
                    <option value="order">ORDERING</option>                        
                </field>                
                <field name="ordering" type="radio" default="asc" label="ORDERING" description="ORDERING_DESC">
                    <option value="asc">ASCENDING</option>
                    <option value="desc">DESCENDING</option>
                </field>               
				
                <field name="showcounter" type="radio" default="1" label="COUNTER" description="COUNTER_DESC">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
				
				<field name="" type="spacer" default="" label="" description="" />
				<field name="" type="spacer" default="" label="" description="" />
				
                <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />                               
            </fieldset> 
        </fields>
    </config>     
</extension>